<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.StatAssignmentPage"
             Title="StatAssignmentPage">
    <ContentPage.Content >
        <StackLayout>
            <Frame BackgroundColor="DarkRed" Padding="24" CornerRadius="0">
                <Label Text="Character Creation" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button BackgroundColor="Red" TextColor="White" WidthRequest="200" Text="PlaceHolder" x:Name="totallabel1"/>
                    <Picker BackgroundColor="Red" x:Name="StatPicker1" WidthRequest="100"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button BackgroundColor="Red" TextColor="White"  WidthRequest="200" Text="PlaceHolder" x:Name="totallabel2"/>
                    <Picker BackgroundColor="Red" x:Name="StatPicker2" WidthRequest="100"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button BackgroundColor="Red" TextColor="White" WidthRequest="200" Text="PlaceHolder" x:Name="totallabel3"/>
                    <Picker BackgroundColor="Red" x:Name="StatPicker3" WidthRequest="100"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button BackgroundColor="Red" TextColor="White" WidthRequest="200" Text="PlaceHolder" x:Name="totallabel4"/>
                    <Picker BackgroundColor="Red" x:Name="StatPicker4" WidthRequest="100"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button BackgroundColor="Red" TextColor="White" WidthRequest="200" Text="PlaceHolder" x:Name="totallabel5"/>
                    <Picker BackgroundColor="Red" x:Name="StatPicker5" WidthRequest="100"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button BackgroundColor="Red" TextColor="White" WidthRequest="200" Text="PlaceHolder" x:Name="totallabel6"/>
                    <Picker BackgroundColor="Red" x:Name="StatPicker6" WidthRequest="100"/>
                </StackLayout>
                <Button BackgroundColor="Red" TextColor="White" Text="Submit" WidthRequest="100" Clicked="AssignStats"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>