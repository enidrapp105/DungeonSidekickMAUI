<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.SignupPage">
    <VerticalStackLayout>
        <Label Text="Sign up" TextColor="{DynamicResource FontC}" BackgroundColor="{DynamicResource P}"/>
        <Label Text="username" TextColor="{DynamicResource FontC}"/>
        <Entry x:Name="usernamebox" TextColor="{DynamicResource FontC}" BackgroundColor="{DynamicResource SecondaryColor}"/>
        <Label Text="password" TextColor="{DynamicResource FontC}"/>
        <Entry x:Name="passwordbox" IsPassword="true" TextColor="{DynamicResource FontC}" BackgroundColor="{DynamicResource SecondaryColor}"/>
        <Label Text="password(again)" TextColor="{DynamicResource FontC}"/>
        <Entry x:Name="passwordbox2" IsPassword="true" TextColor="{DynamicResource FontC}" BackgroundColor="{DynamicResource SecondaryColor}"/>
        <Button TextColor="{DynamicResource FontC}" Text="Submit" Clicked="signupButtonClicked" BackgroundColor="{DynamicResource SecondaryColor}"/>
    </VerticalStackLayout>
</ContentPage>