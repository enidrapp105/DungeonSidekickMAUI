<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.ExhaustionView">
    <StackLayout Orientation="Vertical" Padding="10">
        <StackLayout Orientation="Horizontal">
            <Label Text="Exhaustion Level:" VerticalOptions="Center" />
            <Picker x:Name="LevelPicker" Title="Select Level" VerticalOptions="CenterAndExpand" />
        </StackLayout>
        <Label x:Name="DescriptionLabel" Text="" VerticalOptions="Start" />
    </StackLayout>
</ContentView>
