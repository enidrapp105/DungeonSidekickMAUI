<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.LoginPage">
    <VerticalStackLayout BackgroundColor="LightSlateGray">
        <Label Text="Login" BackgroundColor="Black" TextColor="White" FontSize="Title" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>

        <Entry Placeholder="Username" FontSize="Body" BackgroundColor="White" TextColor="Black" x:Name="UName"
            WidthRequest="1000" HorizontalOptions="FillAndExpand" />
        <Entry Placeholder="Password" FontSize="Body" BackgroundColor="White" TextColor="Black" x:Name="Pass"
            WidthRequest="1000" HorizontalOptions="FillAndExpand" IsPassword="True"/>
        <Button BackgroundColor="Blue" TextColor="White"  Text="Log In" Clicked="loginButtonClicked"
            WidthRequest="1000" HorizontalOptions="FillAndExpand"/>
        <Button BackgroundColor="Blue" TextColor="White"  Text="Don't have an account?" Clicked="signupButtonClicked"
            WidthRequest="1000" HorizontalOptions="FillAndExpand" Margin="5"/>
        <Button BackgroundColor="OrangeRed" Text="Continue without account" Clicked="DebugbuttonButtonClicked" WidthRequest="1000"/>

    </VerticalStackLayout>
</ContentPage>