<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label Text="Login Page" TextColor="White" FontSize="Title" Padding="30,10,30,10"/>
        <Button BackgroundColor="Red" TextColor="White"  Text="Don't have an account?" Clicked="signupButtonClicked"
            WidthRequest="1000" HorizontalOptions="Start"/>
        <Entry Placeholder="Username" FontSize="Body" BackgroundColor="OrangeRed" TextColor="White" x:Name="UName"
            WidthRequest="1000" HorizontalOptions="Start" />
        <Entry Placeholder="Password" FontSize="Body" BackgroundColor="OrangeRed" TextColor="White" x:Name="Pass"
            WidthRequest="1000" HorizontalOptions="Start" IsPassword="True"/>
        <Button BackgroundColor="Red" TextColor="White"  Text="Log In" Clicked="loginButtonClicked"
            WidthRequest="1000" HorizontalOptions="Start"/>
        
    </VerticalStackLayout>
</ContentPage>