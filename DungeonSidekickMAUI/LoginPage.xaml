<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.LoginPage">
    <VerticalStackLayout BackgroundColor="{DynamicResource PrimaryColor}">
        <Label Text="Login Page" BackgroundColor="{DynamicResource TrinaryColor}" TextColor="{DynamicResource FontC}" FontSize="Title" Padding="30,10,30,10" Margin="4" HorizontalTextAlignment="Center"/>
        
        <Entry Placeholder="Username" FontSize="Body" BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}" x:Name="UName"
             MinimumWidthRequest="400" HorizontalOptions="Center" Margin="7" PlaceholderColor="{DynamicResource AccessoryColor}"/>
        <Entry Placeholder="Password" FontSize="Body" BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}" x:Name="Pass"
            MinimumWidthRequest="400" HorizontalOptions="Center" IsPassword="True" Margin="7" PlaceholderColor="{DynamicResource AccessoryColor}"/>
        <Button BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}"  Text="Log In" Clicked="loginButtonClicked"
            MinimumWidthRequest="400" HorizontalOptions="Center" Margin="5"/>
        <Button BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}"  Text="Don't have an account?" Clicked="signupButtonClicked"
            MinimumWidthRequest="400" HorizontalOptions="Center"/> <!--For some reason, 400 is different for this button-->
        <Button Text="Continue without account" Clicked="DebugbuttonButtonClicked"/>
        <!--Debug button-->
    </VerticalStackLayout>
</ContentPage>