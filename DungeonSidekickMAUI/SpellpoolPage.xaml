<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.SpellpoolPage"
             Title="SpellpoolPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="{DynamicResource PrimaryColor}" >
            <StackLayout x:Name="NavigationBar" BackgroundColor="{DynamicResource PrimaryColor}">

            </StackLayout>
            <Button BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}"  Text="Add Spells to Spellpool" Clicked="AddSpells" WidthRequest="400" HorizontalOptions="Center"/>
            <VerticalStackLayout  BackgroundColor="{DynamicResource SecondaryColor}" WidthRequest="400" x:Name="SpellpoolStack" >
                    <Label Text="Spells" HorizontalTextAlignment="Center" TextColor="{DynamicResource FontC}" FontSize="36"/>
                </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>