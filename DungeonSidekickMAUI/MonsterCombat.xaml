<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.MonsterCombat"
             >
    <ScrollView>
    <VerticalStackLayout BackgroundColor="{DynamicResource PrimaryColor}">
            <StackLayout x:Name="NavigationBar" BackgroundColor="{DynamicResource PrimaryColor}">

            </StackLayout>
            <Frame BackgroundColor="{DynamicResource TrinaryColor}" Padding="24" CornerRadius="0">
            <Label Text="Monster Combat" HorizontalTextAlignment="Center" TextColor="{DynamicResource FontC}" FontSize="36" Margin="0,0,0,10"/>
        </Frame>
        <VerticalStackLayout x:Name="MonsterStack" BackgroundColor="{DynamicResource SecondaryColor}" WidthRequest="400">
            
        </VerticalStackLayout>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>