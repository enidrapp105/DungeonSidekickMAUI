<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.Settings_Page">
    <StackLayout BackgroundColor="LightSlateGray">
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="Settings" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Button BackgroundColor="Blue" TextColor="White" Text="Change to Light Theme" WidthRequest="1000" HorizontalOptions="FillAndExpand" Clicked="LightTheme" Margin="5"/>
        <Button BackgroundColor="Blue" TextColor="White" Text="Change to Dark Theme" WidthRequest="1000" HorizontalOptions="FillAndExpand" Clicked="DarkTheme" Margin="5"/>
        
        <Button BackgroundColor="Blue" TextColor="White" Text="Customize theme" WidthRequest="1000" HorizontalOptions="FillAndExpand" Clicked="LayoutDesigner" Margin="5"/>
        <Button BackgroundColor="Blue" TextColor="White" Text="Save and Return" WidthRequest="1000" HorizontalOptions="FillAndExpand" Clicked="MainPage" />
    </StackLayout>
</ContentPage>
    
    