<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.SpellCombatPage"
             Title="SpellCombatPage">
    <VerticalStackLayout>
        <VerticalStackLayout x:Name="CombatStack" BackgroundColor="{DynamicResource SecondaryColor}" WidthRequest="400">
            <Label Text="Spells" HorizontalTextAlignment="Center" TextColor="{DynamicResource FontC}" FontSize="36"/>
        </VerticalStackLayout>
        <Button BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}"  Text="Select Monsters" Clicked="SelectMonster" WidthRequest="400" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>