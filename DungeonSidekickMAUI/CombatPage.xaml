<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.CombatPage"
             Title="CombatPage">
    <VerticalStackLayout BackgroundColor="{DynamicResource PrimaryColor}">
        <Button BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}"  Text="Select Monster" Clicked="SelectMonster" WidthRequest="400" HorizontalOptions="Center"/>
        <VerticalStackLayout x:Name="CombatStack" BackgroundColor="{DynamicResource SecondaryColor}" WidthRequest="400">
            <Label Text="Inventory" HorizontalTextAlignment="Center" TextColor="{DynamicResource FontC}" FontSize="36"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>