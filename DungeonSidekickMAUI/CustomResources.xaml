<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.CustomResources">

    <Color x:Key="BackgroundC"> #FF0000 </Color>
    <Color x:Key="HeaderC">#FF0000</Color>
    <Color x:Key="FrameC">#FF0000</Color>
    <Color x:Key="FontC">#FFFFFF</Color>

    <Frame x:Key="PageSection" BackgroundColor="{DynamicResource BackgroundC}" Padding="5" >
        <StackLayout BackgroundColor="{DynamicResource FrameC}" Padding="5">
        </StackLayout>
    </Frame>
</ResourceDictionary>