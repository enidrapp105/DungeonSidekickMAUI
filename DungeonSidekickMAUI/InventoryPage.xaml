<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.InventoryPage"
             Title="InventoryPage">
    
    <StackLayout BackgroundColor="{DynamicResource PrimaryColor}">
    <Frame BackgroundColor="{DynamicResource TrinaryColor}" CornerRadius="0">
        <!--This label handles the title-->
        <Label Text="Inventory" HorizontalTextAlignment="Center" VerticalTextAlignment="Start" TextColor="{DynamicResource FontC}" FontSize="36"/>
    </Frame>
    <VerticalStackLayout HorizontalOptions="Center" BackgroundColor="{DynamicResource SecondaryColor}" x:Name="InvStack">

        <Button BackgroundColor="{DynamicResource SecondaryColor}" TextColor="{DynamicResource FontC}"  Text="Add Item" Clicked="AddItem" WidthRequest="400" HorizontalOptions="Center"/>
    </VerticalStackLayout>
    </StackLayout>
</ContentPage>