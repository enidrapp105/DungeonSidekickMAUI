<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.CSheet_Inventory">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="DarkRed" Padding="24" CornerRadius="0">
                <Label Text="Character's Inventory and Proficiencies" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Entry Placeholder="Inventory/Equipment" FontSize="Body" BackgroundColor="OrangeRed" TextColor="White" x:Name="Inventory"
            VerticalTextAlignment="Start" WidthRequest="1000" HorizontalOptions="Start" HeightRequest="75"/>

            <Entry Placeholder="Proficiencies" FontSize="Body" BackgroundColor="OrangeRed" TextColor="White" x:Name="Proficiencies"
            VerticalTextAlignment="Start" WidthRequest="1000" HorizontalOptions="Start" HeightRequest="100"/>

            <Button BackgroundColor="Red" TextColor="White"  Text="Submit Form" Clicked="SubmitStats"
            WidthRequest="1000" HorizontalOptions="Start"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>