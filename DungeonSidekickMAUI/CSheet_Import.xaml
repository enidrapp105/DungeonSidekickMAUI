<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.CSheet_Import"
             Title="CSheet_Import">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="MainPanel">
                <Frame BackgroundColor="DarkRed" Padding="24" CornerRadius="0">
                    <Label Text="Dungeon SideKick" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                </Frame>
                <Entry Placeholder="Your Name" FontSize="Body" BackgroundColor="OrangeRed" TextColor="White" x:Name="PName"/>
                <!--PName = Player Name, CName = Character Name-->
                <Button BackgroundColor="Red" TextColor="White" Text="Import Sheet" Clicked="ImportSheet"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>