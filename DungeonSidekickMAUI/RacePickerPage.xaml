<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonSidekickMAUI.RacePickerPage">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" HorizontalOptions="CenterAndExpand" BackgroundColor="{DynamicResource BackgroundC}">
            <StackLayout x:Name="RacePageStack">
                <StackLayout x:Name="RaceButtonContainer" Orientation="Vertical" HorizontalOptions="Start">
                    <Frame BackgroundColor="{DynamicResource HeaderC}" Padding="24" CornerRadius="0">
                        <Label Text="Character Creation" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                    </Frame>
                    <!-- Dynamically created buttons will be added here -->
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>